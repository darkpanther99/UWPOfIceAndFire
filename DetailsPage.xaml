<Page
    x:Class="TXC54G_HF.DetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TXC54G_HF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TXC54G_HF.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:DetailsPageViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Grid>
        <TextBlock Text="{Binding character.name, Mode=OneWay}" Margin="184,23,1178,848"/>
        <TextBlock Text="{Binding character.born, Mode=OneWay}" Margin="162,187,1212,666"/>

            <HyperlinkButton Content="Show Details" Margin="1000,664,0,0" VerticalAlignment="Top" Click="HyperlinkButton_Click" IsEnabled="{x:Bind Frame.CanGoBack, Mode=OneWay}"/>

    </Grid>
</Page>
